<h2><%= @article.title %></h2>
<p><%= @article.text %></p>
<hr>

<% @article.comments.each  do |f| %>
	<h3> <%= f.author %> </h3>
	<p> <%= f.body %> </p>
	<hr>
<% end %>

<%= form_for ([@article, @article.comments.build])  do |f| %>
	<p>
		<%= f.label :author %><br>		
		<%= f.text_field :author  %>		
	</p>

	<p>
		<%= f.label :body %><br>		
		<%= f.text_area :body %>		
	</p>

	<p>
		<%= f.submit  %>
	</p>
<% end %>